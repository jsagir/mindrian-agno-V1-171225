# ═══════════════════════════════════════════════════════════════════════════
# MINDRIAN ENVIRONMENT CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════
# Copy this file to .env and fill in your values
# ═══════════════════════════════════════════════════════════════════════════

# ───────────────────────────────────────────────────────────────────────────
# LLM PROVIDERS (Multi-provider: Anthropic + Google)
# ───────────────────────────────────────────────────────────────────────────

# Anthropic Claude (Primary for complex reasoning)
ANTHROPIC_API_KEY=sk-ant-api03-...

# Google Gemini (Secondary for speed/cost optimization)
GOOGLE_API_KEY=AIza...

# Default models
ANTHROPIC_DEFAULT_MODEL=claude-sonnet-4-20250514
GOOGLE_DEFAULT_MODEL=gemini-2.0-flash-exp

# Default provider (anthropic or google)
DEFAULT_LLM_PROVIDER=anthropic

# ───────────────────────────────────────────────────────────────────────────
# NEO4J (Graph Database for Knowledge Graph)
# ───────────────────────────────────────────────────────────────────────────

# Neo4j Aura (cloud) or local Docker
NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-password

# For local Docker: NEO4J_URI=bolt://localhost:7687

# ───────────────────────────────────────────────────────────────────────────
# SUPABASE (PostgreSQL + pgvector for conversation memory)
# ───────────────────────────────────────────────────────────────────────────

SUPABASE_URL=https://xxxxxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIs...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIs...

# Direct database URL (for migrations)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# ───────────────────────────────────────────────────────────────────────────
# EMBEDDINGS (for vector search in Supabase pgvector)
# ───────────────────────────────────────────────────────────────────────────

# Provider: google (text-embedding-004) or openai (text-embedding-3-small)
EMBEDDING_PROVIDER=google
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_DIMENSIONS=768

# If using OpenAI embeddings:
# OPENAI_API_KEY=sk-...
# EMBEDDING_MODEL=text-embedding-3-small
# EMBEDDING_DIMENSIONS=1536

# ───────────────────────────────────────────────────────────────────────────
# MCP SERVER CONFIGURATION
# ───────────────────────────────────────────────────────────────────────────

# Neo4j MCP (uses NEO4J_* vars above)
MCP_NEO4J_ENABLED=true

# Supabase MCP (uses SUPABASE_* vars above)
MCP_SUPABASE_ENABLED=true

# ───────────────────────────────────────────────────────────────────────────
# APPLICATION PATHS
# ───────────────────────────────────────────────────────────────────────────

# Path to existing SKILL.md files
SKILLS_PATH=/home/jsagi/Mindrian/mindrian-platform/skills

# Generated agents output path
AGENTS_OUTPUT_PATH=/home/jsagi/Mindrian/mindrian-agno/mindrian/agents

# Database file for Agno session storage
AGNO_DB_PATH=tmp/mindrian.db

# ───────────────────────────────────────────────────────────────────────────
# APPLICATION SETTINGS
# ───────────────────────────────────────────────────────────────────────────

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Session
SESSION_TIMEOUT_MINUTES=60
MAX_CONVERSATION_TURNS=100

# Debug mode (enables verbose logging)
DEBUG=false
